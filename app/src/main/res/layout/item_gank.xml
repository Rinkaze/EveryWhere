<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_tech_icon"
                android:layout_width="@dimen/tech_icon_size"
                android:layout_height="@dimen/tech_icon_size"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:src="@mipmap/ic_android"/>
            <TextView
                android:id="@+id/tv_tech_title"
                android:layout_marginStart="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:textSize="14sp"
                android:textColor="#2c2c2c"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="8dp"
                android:layout_alignParentStart="true"
                android:id="@+id/tv_tech_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/comment_reply"
                android:drawableStart="@mipmap/ic_author"
                android:drawablePadding="6dp"/>
            <TextView
                android:layout_marginEnd="3dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/tv_tech_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/comment_reply"
                android:drawableStart="@mipmap/ic_time"
                android:drawablePadding="6dp"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
