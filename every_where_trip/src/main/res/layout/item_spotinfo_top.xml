<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/c_333"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_alignLeft="@id/tv_title"
        android:textColor="@color/c_999"
        android:textSize="@dimen/sp_14"/>

    <ImageView
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_17"
        android:src="@mipmap/icon_zan_u"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30"/>
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_108"
        android:layout_below="@id/tv_address"
        android:layout_marginTop="@dimen/dp_33"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="@dimen/dp_20"
        app:cardCornerRadius="@dimen/dp_12"
        app:cardElevation="@dimen/dp_8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:id="@+id/iv_header"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_46"
                android:src="@mipmap/zhanweitu_touxiang"/>

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_header"
                android:layout_marginLeft="@dimen/dp_13"
                android:textColor="@color/c_333"
                android:textSize="@dimen/sp_16"
                android:text=""
                android:layout_alignTop="@id/iv_header"/>

            <TextView
                android:id="@+id/tv_occupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_header"
                android:layout_marginLeft="@dimen/dp_13"
                android:textColor="@color/c_999"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/tv_author"/>
            
            <ImageView
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:id="@+id/iv_video"
                android:src="@mipmap/icon_yuyin"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_26"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
