<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_title_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_37">

            <ImageView
                android:id="@+id/iv_header_left"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_marginLeft="@dimen/dp_12" />

            <TextView
                android:id="@+id/tv_name_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_toRightOf="@id/iv_header_left"
                android:ellipsize="end"
                android:maxLength="10"
                android:maxLines="1"
                android:text="林"
                android:textSize="@dimen/sp_22" />

            <TextView
                android:id="@+id/tv_info_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_name_left"
                android:layout_below="@id/tv_name_left"
                android:layout_marginTop="@dimen/dp_8"
                android:ellipsize="end"
                android:maxLength="15"
                android:maxLines="1"
                android:text="暂无"
                android:textColor="@color/c_999"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_edit_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_info_left"
                android:layout_marginRight="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_5"
                android:text="编辑"
                android:textColor="@color/c_fa6a13"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/iv_edit_left"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_below="@id/tv_info_left"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_toLeftOf="@id/tv_edit_left"
                android:src="@mipmap/icon_me_bianji" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_moneybag_left"
            android:layout_width="@dimen/dp_288"
            android:layout_height="@dimen/dp_122"
            android:layout_below="@id/rl_title_left"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_37"
            android:background="@drawable/bg_btn_ff9d53_fa">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_8"
                android:text="我的钱包"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_money_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="99"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_58" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_64"
                android:layout_toRightOf="@id/tv_money_left"
                android:text="元"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_bonus_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_6"
                android:drawableRight="@mipmap/little_right_arrow"
                android:drawableTint="@color/white"
                android:text="赢取奖金"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_menu"
            android:layout_width="@dimen/dp_288"
            android:layout_height="@dimen/dp_212"
            android:layout_below="@id/rl_moneybag_left"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_19"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_kaquan_left"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_51">

                    <ImageView
                        android:id="@+id/iv_kaquan_left"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_14"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:layout_marginTop="@dimen/dp_20"
                        android:src="@mipmap/icon_me_kaquan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_17"
                        android:layout_toRightOf="@id/iv_kaquan_left"
                        android:text="我的卡券"
                        android:textColor="@color/c_333"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_11"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_20"
                        android:background="@mipmap/big_arrow_right"
                        android:backgroundTint="@color/c_333" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/c_f0f0f0" />

                <RelativeLayout
                    android:id="@+id/rl_trip_left"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_51">

                    <ImageView
                        android:id="@+id/iv_trip_left"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_14"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:layout_marginTop="@dimen/dp_20"
                        android:src="@mipmap/icon_me_yigou" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_17"
                        android:layout_toRightOf="@id/iv_trip_left"
                        android:text="已购旅程"
                        android:textColor="@color/c_333"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_11"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_20"
                        android:background="@mipmap/big_arrow_right"
                        android:backgroundTint="@color/c_333" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_3"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/c_f0f0f0" />

                <RelativeLayout
                    android:id="@+id/rl_like_left"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_51">

                    <ImageView
                        android:id="@+id/iv_like_left"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_14"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:layout_marginTop="@dimen/dp_20"
                        android:src="@mipmap/icon_me_shoucang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_17"
                        android:layout_toRightOf="@id/iv_like_left"
                        android:text="我的收藏"
                        android:textColor="@color/c_333"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_11"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_20"
                        android:background="@mipmap/big_arrow_right"
                        android:backgroundTint="@color/c_333" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/c_f0f0f0" />

                <RelativeLayout
                    android:id="@+id/rl_follow_left"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_51">

                    <ImageView
                        android:id="@+id/iv_follow_left"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_14"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:layout_marginTop="@dimen/dp_20"
                        android:src="@mipmap/icon_me_guanzhu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_17"
                        android:layout_toRightOf="@id/iv_follow_left"
                        android:text="我的关注"
                        android:textColor="@color/c_333"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_11"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_20"
                        android:background="@mipmap/big_arrow_right"
                        android:backgroundTint="@color/c_333" />

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_menu"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_service_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_88"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_80"
                android:drawableLeft="@mipmap/icon_me_kefu"
                android:drawablePadding="@dimen/dp_7"
                android:text="联系客服"
                android:textColor="@color/c_333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_idea_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_88"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_80"
                android:drawableLeft="@mipmap/icon_me_fankui"
                android:drawablePadding="@dimen/dp_7"
                android:text="意见反馈"
                android:textColor="@color/c_333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_version_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_88"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_80"
                android:drawableLeft="@mipmap/icon_me_banben"
                android:drawablePadding="@dimen/dp_7"
                android:text="版本检测"
                android:textColor="@color/c_333"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
